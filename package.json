{
  "name": "mofb-api",
  "version": "1.0.0",
  "description": "RESTful MOFB API",
  "main": "server.js",
  "scripts": {
    "start": "nodemon server.js",
    "test": "mocha --recursive --timeout 10000 --exit",
    "build": "npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SCODEMeetup/mofb-api.git"
  },
  "keywords": [
    "RESTful"
  ],
  "author": "SCODE-API",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/SCODEMeetup/mofb-api/issues"
  },
  "homepage": "https://github.com/SCODEMeetup/mofb-api#readme",
  "nodemonConfig": {
    "restartable": "rs",
    "verbose": true,
    "ignore": [
      ".git",
      "node_modules/**/node_modules",
      "Postman Collection/"
    ],
    "watch": [
      "server.js",
      "api/",
      "swagger.yaml"
    ],
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "js,json"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.4"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "csv": "^5.1.1",
    "express": "^4.16.3",
    "md5": "^2.2.1",
    "node-cache": "^4.2.0",
    "nodemon": "^1.18.4",
    "request": "^2.88.0",
    "swagger-ui-express": "^4.0.1",
    "yamljs": "^0.3.0"
  }
}

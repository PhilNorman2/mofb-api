{
    "name": "mofb-api",
    "version": "1.0.0",
    "description": "RESTful MOFB API",
    "main": "server.js",
    "scripts": {
        "start": "nodemon server.js",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/SCODEMeetup/mofb-api.git"
    },
    "keywords": [
        "RESTful"
    ],
    "author": "SCODE-API",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/SCODEMeetup/mofb-api/issues"
    },
    "homepage": "https://github.com/SCODEMeetup/mofb-api#readme",
    "nodemonConfig": {
        "restartable": "rs",
        "verbose": true,
        "ignore": [
            ".git",
            "node_modules/**/node_modules",
            "Postman Collection/"
        ],
        "watch": [
            "server.js",
            "api/"
        ],
        "env": {
            "NODE_ENV": "development"
        },
        "ext": "js,json"
    },
    "devDependencies": {
        "nodemon": "^1.18.4"
    },
    "dependencies": {
        "express": "^4.16.3",
        "request": "^2.88.0"
    }
}
